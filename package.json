{
  "name": "vscode-mssql-chat",
  "publisher": "joyceerhl",
  "displayName": "vscode-mssql-chat",
  "description": "SQL expertise for Copilot Chat",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "github.copilot-chat",
    "ms-mssql.mssql"
  ],
  "enabledApiProposals": [
    "chatParticipant",
    "chatVariableResolver",
    "languageModels"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "name": "mssql",
        "description": "Generate queries for your SQL database"
      }
    ],
    "commands": [
      {
        "command": "vscode-mssql-chat.summarizeDatabase",
        "title": "Summarize Database"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "vscode-mssql-chat.summarizeDatabase",
          "when": "view == objectExplorer && viewItem =~ /^(Server|Database)$/",
          "group": "sqlchat@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "ts-loader": "^9.5.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.6"
  }
}
